{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS", // Will have to fix to be ESM later
    "moduleDetection": "force",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src", "tests", "tsup.config.ts"]
}
